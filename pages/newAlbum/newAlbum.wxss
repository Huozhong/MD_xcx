/**contact.wxss**/
@import "../common/common.wxss";
page{
	height: 100%;
}
.container{
	padding: 20rpx 0;
	height: auto;
	min-height: 100%;
}

.conentWrap{
	width: 100%;
	font-size: 30rpx;
	padding: 0 20rpx;
	box-sizing: border-box;
}

.section{
	margin-bottom: 50rpx;
	padding-bottom: 20rpx;
	border-bottom: 1rpx solid #ddd;
}

.section:last-child{
	border-bottom: none;
}

.section text.name{
	display: block;
	margin-bottom: 20rpx;
}

.section .smallTip{
	font-size: 28rpx;
	color: #bbb;
}

.section .nameInput{
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	border: 1rpx solid #ddd;
	box-sizing: border-box;
	padding-left: 20rpx;
	border-radius: 10rpx;
}

.section .nameInput.error{
	border-color: red;
}

.section .tags{
	width: 70%;
	margin: 0 auto;
	display: flex;
	flex-flow: row wrap;
	justify-content: space-between;
}

.section .tag{
    width: 230rpx;
    height: 85rpx;
    line-height: 85rpx;
    border: 1rpx solid #2c3550;
    color: #2c3550;
    text-align: center;
    margin-bottom: 20rpx;
}

.section .tag.active {
    background-color: #2c3550;
    color: #fff;
}

.section .addBtn{
	line-height: 80rpx;
	background-color: #2c3550;
	font-size: 30rpx;
	text-align: center;
	color: #fff;
	border-radius: 10rpx;
}


