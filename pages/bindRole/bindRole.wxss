/**contact.wxss**/
@import "../common/common.wxss";
page{
	height: 100%;
}

.contentWrap{
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	padding: 20rpx;
	background-color: #e7e7e7;
	position: relative;
}

.rolesWrap{
	position: absolute;
	left: 0;
	top: 130rpx;
	bottom: 120rpx;
	padding: 20rpx;
	box-sizing: border-box;
}

.saveBtn{
	position: absolute;
	left: 0;
	bottom: 10rpx;
	width: 100%;
	height: 80rpx;
	padding: 0 20rpx;
	box-sizing: border-box;
}

.saveBtn button{
	line-height: 80rpx;
	background-color: #2c3550;
	font-size: 30rpx;
	text-align: center;
	color: #fff;
	border-radius: 10rpx;
}

.role-boxs{
	width: 100%;
	box-sizing: border-box;
	padding: 10rpx 10rpx;
	background-color: #fff;
}

.scroll_item{
	padding: 20rpx 10rpx;
	overflow: hidden;
	border-bottom: 1px solid #cfcfcf;
}

.scroll_item:last-child{
	border-bottom: none;	
}


.scroll_item .role-box{
	width: 450rpx;
	font-size: 30rpx;
	color: #000;
}

.role-box .p {
    display: inline-block;
    line-height: 50rpx;
}

.role-box .em {
    margin-right: 35rpx;
    font-style: normal;
    font-weight: normal;
    color: #85a9d6;
}

.scroll_item .select-box {
    position: relative;
}

.select-box .check-button {
    display: inline-block;
    vertical-align: top;
    height: 95rpx;
}

.icon-check-l {
    width: 70rpx;
    height: 70rpx;
    background-position: 0 -330rpx;
}

.icon-check-l.active {
    background-position: 0 -250rpx;
}

.codeTip{
	text-align: left;
	font-size: 30rpx;
	height: 80rpx;
	line-height: 80rpx;
}

.codeWrap{
	margin-top: 50rpx;
	width: 100%;
	padding: 0 40rpx;
	box-sizing: border-box;
	background-color: red;
}

.codeImg{
	width: 70%;
	height: 100rpx;
}

.refreshCode{
	width: 20%;
	height: 100rpx;
	font-size: 36rpx;
	line-height: 100rpx;
	text-align: center;
	background-color: #e0c977;
	color: #7d601b;
}

.codeImg image{
	width: 100%;
	height: 100%;
}