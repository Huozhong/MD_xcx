/**messages.wxss**/
page{
	width: 100%;
	height: 100%;
	background: #e7e7e7;
}

.messagesWrap{
	width: 100%;
	padding: 0 25rpx;
	padding-top: 118rpx;
	box-sizing: border-box;
}

.followMsgWrap{
	height: 100rpx;
	background: #fff;
	line-height: 100rpx;
	padding: 0 10rpx;
	margin-bottom: 40rpx;
	font-size: 30rpx;
	color: #000;
}

.followMsgWrap text{
	color: #85a9d6;
}

.informWrap{
	width: 100%;
	display: flex;
	min-height: 120rpx;
	max-height: 320rpx;
	overflow: hidden;
	font-size: 30rpx;
	color: #000;
	padding: 0 10rpx;
    margin-bottom: 40rpx;
}

.informWrap .avatarWrap{
	width: 100rpx;
	height: 100rpx;
}

.informWrap .avatarWrap image{
	width: 100%;
	height: 100%;
}

.informWrap .informConWrap{
	flex: 1;
	margin-left: 20rpx;
	background: #fff;
	padding: 10rpx 0;
}

.informConWrap>view{
	line-height: 50rpx;
	padding: 0 15rpx;
	word-break: break-all;
	overflow: hidden;
	min-height: 50rpx;
}

.userName{
	color: #85a9d6;
}
