@import "/wxParse/wxParse.wxss";

.moment-item {
  padding: 20rpx 40rpx 2rpx;
  position: relative;
  overflow: hidden;
  border-bottom: 2rpx solid #bbb;
}

.moment-item .avatar {
  width: 100rpx;
  height: 100rpx;
}

.moment-item .momentFr {
  margin-left: 150rpx;
  margin-right: 12rpx;
  margin-bottom: 20rpx;
}

.moment-item .momentFr .top {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 20rpx;
}

.moment-item .momentFr .bottom {
  width: 100%;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  color: #848484;
}

.bottom .commentIcoWrap,.bottom .likeIcoWrap{
    height: 100%;
    line-height: 40rpx;
}

.bottom .commentIcoWrap{
    margin-left: 40rpx;
}

.bottom .momentLikeIco{
    width: 34rpx;
    height: 28rpx;
    margin-top: -14rpx;
    margin-left: 5rpx;
    background-position: -92rpx -416rpx;
}

.bottom .momentCommIco{
    width: 46rpx;
    height: 29rpx;
    margin-top: -14.5rpx;
    margin-left: 5rpx;
    background-position: -92rpx -372rpx;
}

.moment-item .name {
  display: block;
  height: 100%;
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3550;
}

.moment-item .moemntTag {
  display: block;
  margin-left: 10rpx;
  width: 75rpx;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 100% auto;
}

.moment-item .moemntTag.hot {
  background-image: url(../../images/hot.png);
}

.moment-item .momentMore {
  width: 40rpx;
  height: 45rpx;
  margin-top: -22.5rpx;
  background-position: -169rpx -298rpx;
}

.momentTxt {
  width: 100%;
  font-size: 30rpx;
  color: #1f1f1f;
  word-wrap: break-word;
}

.momentImgs {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.momentImgWrap {
  width: 150rpx;
  height: 150rpx;
  display: inline-block;
  margin-right: 10rpx;
}

.momentImgs image {
  width: 100%;
  height: 100%;
}

.wxParse-img {
  background-color: #fff;
  max-width: 120rpx;
  max-height: 120rpx;
}
