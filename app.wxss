.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.flex-wrap{
    display: flex;
}
.flex-tab {
    flex-flow:row nowrap;
    justify-content:space-around;
    align-items:stretch;
}

.flex-item {
    flex-grow:1;
    text-align:center;
}

.line-h{
    width: 1rpx;
}

.line-v{
    height: 1rpx;
}

.fl{
    float: left;
}

.fr{
    float: right;
}

.tip{
    width: 100%;
    text-align: center;
    font-size: 24rpx;
    color: #000;
}
